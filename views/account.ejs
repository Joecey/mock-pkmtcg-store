<!-- views/account.ejs -->
<div class="d-inline-block text-center container">
    <div class="row justify-content-center">
        <h1>
            <%= title %>
        </h1>
        <p>Click the button below to log out of your account!</p>
        <button id="logout" class="btn custom-button w-auto" onclick="logout()">Logout</button>
    </div>
</div>

<!-- on click, clear the cart and the current logged in user then redirect to home! -->
<script>
    const logout = () => {
        localStorage.clear();
        window.location.href = "/";
    };
</script>